{
  "name": "clipwiz",
  "version": "1.0.0",
  "private": true,
  "description": "ClipWiz - Video Editor and Synthesis Platform",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:web": "pnpm --filter @clipwiz/web dev",
    "dev:server": "pnpm --filter @clipwiz/server dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @clipwiz/web build",
    "build:server": "pnpm --filter @clipwiz/server build",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean:compiled": "./scripts/clean-compiled.sh",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check"
  },
  "keywords": [
    "video-editor",
    "monorepo",
    "pnpm"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  }
}

